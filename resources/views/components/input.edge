<div class="form-group">
    <label for="{{name}}">{{label}}</label>
    @if(type === 'textarea')
    <textarea name="{{name}}" id="{{name}}" cols="30" rows="10" class="{{cls || 'form-control'}}">{{value || ''}}</textarea> 
    @else
    <input type="{{type || 'text'}}" name="{{name}}" id="{{name}}" class="{{cls || 'form-control'}}" value="{{value || ''}}">      
    @end

</div>
@inputError(name)
  @each(message in $messages)
    <p class="text-danger">{{ message }}</p>
  @end
@end